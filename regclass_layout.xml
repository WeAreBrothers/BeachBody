<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Class Registration"
        android:id="@+id/creg_tview"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="27dp" />

    <LinearLayout
        android:id="@+id/formLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/creg_tview"
        android:layout_alignStart="@+id/creg_tview"
        android:layout_marginTop="44dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>
        <LinearLayout
            android:id="@+id/addClassLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/addClass1"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Subject"
                android:ems="7"
                android:id="@+id/subjectText1"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="7"
                android:hint="Course #"
                android:id="@+id/courseText1"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/addClass2"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Subject"
                android:ems="7"
                android:id="@+id/subjectText2"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="7"
                android:hint="Course #"
                android:id="@+id/courseText2"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/addClass3"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Subject"
                android:ems="7"
                android:id="@+id/subjectText3"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="7"
                android:hint="Course #"
                android:id="@+id/courseText3"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/addClass4"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Subject"
                android:ems="7"
                android:id="@+id/subjectText4"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="7"
                android:hint="Course #"
                android:id="@+id/courseText4"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/addClass5"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Subject"
                android:ems="7"
                android:id="@+id/subjectText5"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="7"
                android:hint="Course #"
                android:id="@+id/courseText5"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Class"
        android:id="@+id/addClassButton"
        android:layout_alignBaseline="@+id/toMainButton"
        android:layout_alignBottom="@+id/toMainButton"
        android:layout_alignStart="@+id/linearLayout7"
        android:onClick="classReg"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to Main Page"
        android:id="@+id/toMainButton"
        android:layout_marginBottom="81dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/creg_tview"
        android:onClick="goToMainPage"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="7"
        android:hint="Year Taken"
        android:id="@+id/yearEText"
        android:layout_below="@+id/classname_spin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp" />

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignStart="@+id/formLayout1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Subject"
                android:ems="7"
                android:id="@+id/editText3" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="7"
                android:hint="Course #"
                android:id="@+id/editText4" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Subject"
                android:ems="7"
                android:id="@+id/editText5" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="7"
                android:hint="Course #"
                android:id="@+id/editText6" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Subject"
                android:ems="7"
                android:id="@+id/editText7" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="7"
                android:hint="Course #"
                android:id="@+id/editText8" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Subject"
                android:ems="7"
                android:id="@+id/editText9" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="7"
                android:hint="Course #"
                android:id="@+id/editText10" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Subject"
                android:ems="7"
                android:id="@+id/editText11" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="7"
                android:hint="Course #"
                android:id="@+id/editText12" />
        </LinearLayout>
    </LinearLayout>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inst_fname"
        android:ems="7"
        android:hint="Your Email"
        android:layout_below="@+id/yearEText"
        android:layout_toEndOf="@+id/formLayout1"
        android:layout_marginTop="40dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="7"
        android:hint="Instructor Last Name"
        android:id="@+id/inst_lname"
        android:layout_alignTop="@+id/inst_fname"
        android:layout_alignEnd="@+id/toMainButton" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="7"
        android:hint="Course #"
        android:id="@+id/courseNumEText"

        android:layout_below="@+id/formLayout1"
        android:layout_alignStart="@+id/inst_lname" />

    <Spinner
        android:layout_width="118dp"
        android:layout_height="wrap_content"
        android:id="@+id/classname_spin"
        android:spinnerMode="dropdown"
        android:layout_alignBottom="@+id/courseNumEText"
        android:layout_alignStart="@+id/formLayout1" />

</RelativeLayout>